<%= form_for @note, :html => {:multipart => true} do |f| %>
  
  <%= couchdb_rev_field f, @note %>
  
  <%= f.label "Заглавие" %>
  <%= f.text_field :title, :size => 60 %>
  
  <%= f.label "Описание" %>
  <%= f.text_area :description %>

  <%= f.label "ключови думи (отделени с място)" %>
  <%= f.text_field "tags", :value => @note.tags.join(" "), :size => 60 %>

  <%# f.label "Visited On" %>
  <%# f.text_field "visited_on", :id => "date" %>
  
  <br />
  <%= f.unobtrusive_date_text_picker "updated_at", :format => "y-m-d" %>
  <br />
  <%= f.label "Файл" %>
  <%= file_field_tag("note[attachments][]") %>  
  
  <%= f.submit "Запис" %>
  
<% end %>
