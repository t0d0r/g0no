<%= form_for @note, :html => {:multipart => true} do |f| %>
  
  <%= couchdb_rev_field f, @note %>
  
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  
  <%= f.label "Description" %>
  <%= f.text_area :description %>

  <%# f.label "Tags (separated by spaces)" %>
  <%# f.text_field "tags", :value => @note.tags.join(" ") %>

  <%= f.label "Visited On" %>
  <%= f.text_field "visited_on", :id => "date" %>
  
  <br />
  <%= f.unobtrusive_date_text_picker "updated_at", :format => "y-m-d" %>
  <br />
  <%= f.label "Attachment" %>
  <%= f.file_field "attachment" %>

  <%= f.submit "Save" %>
  
<% end %>